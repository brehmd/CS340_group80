<div id = content>

    <div id = text-info>
        Include all relevant information to add a new Appointment entry. * are required, all else can be set to NULL with no entry upon confirmation.
    </div>

    <div id = input-table>
        <table>
            <tr class = attribute-titles>
                <th width="15%">Patient Name</th>
                <th width="15%">Doctor Name</th>
                <th width="15%">*Department Name</th>
                <th width="15%">*Date</th>
                <th width="15%">*Time</th>
                <th width="25%">*Reason</th>
            </tr>

            <tr class = "Appointments-info">
                <td>
                    <select id="patient_name" class="input-attribute">
                        <option value="none"></option>
                        {{#each patients}}
                        <option value="{{this.patient_id}}">{{this.first_name}} {{this.last_name}}</option>
                        {{/each}}
                    </select>
                </td>
                <td><select id = doctor_name class="input-attribute">
                    <option value = none></option>
                    {{#each doctors}}
                    <option value = "{{this.doctor_id}}">{{this.first_name}} {{this.last_name}}</option>
                    {{/each}}
                </select></td>
                <td><select id = department_name class="input-attribute">
                    <option value = none></option>
                    {{#each departments}}
                    <option value = "{{this.department_id}}">{{this.name}}</option>
                    {{/each}}
                </select></td>
                <td><input type="date" id = appointment_date class="input-attribute"></td>
                <td><input type="time" id = appointment_time class="input-attribute"></td> 
                <td><input type="text" id = reason class="input-attribute"></td>
            </tr>

        </table>
    </div>
    
    <div id="buttons">
        <button id="cancel-button" type="button">CANCEL</button>
        <button id="confirm-button" type="button">CONFIRM</button>
    </div>

</div>

<script src="./js/add_appointment.js"></script>