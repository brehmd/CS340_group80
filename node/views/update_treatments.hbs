<div id = content>
    <input type="hidden" id="treatment_id" name="treatment_id" value="{{data.treatment_id}}">


    <div id = text-info>
        Include all relevant information to edit a previous Treatment entry. If an input field is left blank, it defaults to the current value listed above the input. * are required, all else can be set to NULL with "NULL".
    </div>

    <div id = input-table>
        <table>
            <tr class = attribute-titles>
                <th width="50%">*Description</th>
                <th width="50%">Cost</th>
            </tr>

            <tr>
                <td id = prev_desc value="{{data.description}}">{{data.description}}</td>
                <td id = prev_cost value="{{data.cost}}">{{data.cost}}</td>
            </tr>

            <tr class = "Treatments-input">
                <td><input type = text name="description" id = description class="input-attribute"></td>
                <td><input type = number name="cost" id = cost class="input-attribute"></td>
            </tr>

        </table>
    </div>
    
    <div id="buttons">
        <button id="cancel-button" type="button">CANCEL</button>
        <button id="confirm-button" type="button">CONFIRM</button>
    </div>

</div>

<script src="./js/update_treatment.js"></script>