<div id = content>

    <div id = text-info>
        Include all relevant information to add a new Doctor entry. * are required, all else can be set to NULL with no entry upon confirmation.
    </div>

    <div id = input-table>
        <table>
            <tr class = attribute-titles>
                <th width="30%">*First Name</th>
                <th width="30%">*Last Name</th>
                <th width="40%">*Specialization</th>
            </tr>

            <tr id = "Doctors-input">
                <td><input type="text" name="first_name" id = first_name class="input-attribute"></td>
                <td><input type="text" name="last_name" id = last_name class="input-attribute"></td>
                <td><input type="text" name="specialization" id = specialization class="input-attribute"></td>
            </tr>

        </table>
    </div>
    
    <div id="buttons">
        <button id="cancel-button" type = "button">CANCEL</button>

        <button id="confirm-button" type = "button">CONFIRM</button>
    </div>

</div>

<script src="./js/add_doctor.js"></script>