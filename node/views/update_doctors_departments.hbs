<div id = content>
    <input type="hidden" id="doctor_department_id" name="doctor_department_id" value="{{data.doctor_department_id}}">


    <div id = text-info>
        Include all relevant information to update a Doctor_Department entry. If an input field is left blank, it defaults to the current value listed above the input. * are required, all else can be set to NULL with "NULL".
    </div>

    <div id = input-table>
        <table>
            <tr class = attribute-titles>
                <th width="50%">*Doctor Name</th>
                <th width="50%">*Department Name</th>
            </tr>

             <tr>
                <td id="prev_doc" data-prev-doc="{{data.doctor_id}}">{{data.doctor_first_name}} {{data.doctor_last_name}}</td>
                <td id="prev_dep" data-prev-dep="{{data.department_id}}">{{data.department_name}}</td>
            </tr>
            
            <tr class = "Doctors_Departments-info">
                <td><select id = doctor_name class="input-attribute">
                    <option value = none></option>
                    {{#each doctors}}
                    <option value = "{{this.doctor_id}}">{{this.first_name}} {{this.last_name}}</option>
                    {{/each}}
                </select></td>
                <td><select id = department_name class="input-attribute">
                    <option value = none></option>
                    {{#each departments}}
                    <option value = "{{this.department_id}}">{{this.name}}</option>
                    {{/each}}

                </select></td>
            </tr>

        </table>
    </div>
    
    <div id="buttons">
        <button id="cancel-button" type="button">CANCEL</button>
        <button id="confirm-button" type="button">CONFIRM</button>
    </div>

</div>

<script src="./js/update_doctor_department.js"></script>