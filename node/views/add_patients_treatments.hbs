<div id="content">
    <div id="text-info">
        Include all relevant information to add a new Patients_Treatments entry. * are required, all else can be set to NULL with no entry upon confirmation.
    </div>

    <div id="input-table">
        <table>
            <tr class="attribute-titles">
                <th width="50%">Patient Name</th>
                <th width="50%">*Treatment Description</th>
            </tr>

            <tr class="Patients_Treatments-info">
                <td>
                    <select id="patient_name" class="input-attribute">
                        <option value="none"></option>
                        {{#each patients}}
                        <option value="{{this.patient_id}}">{{this.first_name}} {{this.last_name}}</option>
                        {{/each}}
                    </select>
                </td>
                <td>
                    <select id="treatment_desc" class="input-attribute">
                        <option value="none"></option>
                        {{#each treatments}}
                        <option value="{{this.treatment_id}}">{{this.description}}</option>
                        {{/each}}
                    </select>
                </td>
            </tr>
        </table>
    </div>
    
    <div id="buttons">
        <button id="cancel-button" type="button">CANCEL</button>
        <button id="confirm-button" type="button">CONFIRM</button>
    </div>
</div>

<script src="./js/add_patient_treatment.js"></script>